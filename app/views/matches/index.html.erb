<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Homescore</th>
      <th>Awayscore</th>
      <th>Championship</th>
      <th>Gym</th>
      <th>Team id1</th>
      <th>Team id2</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= match.homeScore %></td>
        <td><%= match.awayScore %></td>
        <td><%= match.championship %></td>
        <td><%= match.gym %></td>
        <td><%= match.team_id1.name %></td>
        <td><%= match.team_id2.name %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

