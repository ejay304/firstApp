<h1>Listing matches</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Home score</th>
    <th>Host score</th>
    <th>Championship</th>
    <th>Gym</th>
    <th>Team1</th>
    <th>Team2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.date %></td>
    <td><%= match.home_score %></td>
    <td><%= match.host_score %></td>
    <td><%= match.championship_id %></td>
    <td><%= match.gym_id %></td>
    <td><%= match.team1_id %></td>
    <td><%= match.team2_id %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

