<h1>Liste des clubs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Adresss</th>
      <th>Ville</th>
      <th></th>
      <th></th> 
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
        <td><%= club.name %></td>
        <td><%= club.adress %></td>
        <td><%= "#{club.zip} #{club.city}" %></td>
        <td><%= link_to 'Afficher', club %></td>
        <td><%= link_to 'Modifier', edit_club_path(club) %></td>
        <td><%= link_to 'Supprimer', club, method: :delete, data: { confirm: 'Etes-vous sÃ»r ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-danger">Ajouter un club</button>'.html_safe, new_club_path %>
