<h1>Liste des fédérations</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @federations.each do |federation| %>
      <tr>
        <td><%= federation.name %></td>
        <td><%= federation.logo %></td>
        <td><%= link_to 'Show', federation %></td>
        <td><%= link_to 'Edit', edit_federation_path(federation) %></td>
        <td><%= link_to 'Destroy', federation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-primary">Ajouter une fédération</button>'.html_safe, new_federation_path %>
