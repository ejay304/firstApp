<h1>Liste des saisons</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Début</th>
      <th>Fin</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.name %></td>
        <td><%= season.begin %></td>
        <td><%= season.end %></td>
        <td><%= link_to 'Voir', season %></td>
        <td><%= link_to 'Modifier', edit_season_path(season) %></td>
        <td><%= link_to 'Supprimer', season, method: :delete, data: { confirm: 'Etes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-danger">Ajouter une saison</button>'.html_safe, new_season_path %>
