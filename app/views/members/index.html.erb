<h1>Listing members</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Firstname</th>
      <th>Login</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Password</th>
      <th>Federation</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.firstname %></td>
        <td><%= member.login %></td>
        <td><%= member.phone %></td>
        <td><%= member.email %></td>
        <td><%= member.password %></td>
        <td><%= member.federation.name %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-primary">Ajouter un membre</button>'.html_safe, new_member_path %>
