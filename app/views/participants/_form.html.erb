<%= form_for(@participant) do |f| %>
  <% if @participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
      <% @participant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nom" %><br>
    <%= text_field(:participant,:name) %>
  </div>
  <div class="field">
    <%= f.label "Prénom" %><br>
    <%= text_field(:participant, :firstname) %>
  </div>
  <div class="field">
    <%= f.label "Date d'anniversaire" %><br>
    <%= date_select(:participant,:birthday, start_year: 1940) %>
  </div>
  <div class="field">
    <%= f.label "Numéro de téléphone" %><br>
    <%= text_field(:participant,:phone )%>
  </div>
  <div class="field">
    <%= f.label "Feminin" %><br>
    <%= check_box(:participant,:sexe) %>
  </div>
  <div class="field">
    <%= hidden_field(:participant, :type) %>
  </div>
  <% if @participant.type == "Player" then %>
    <div class="field">
      <%= f.label "No de maillot" %><br>
      <%= number_field(:participant, :noDossard) %>
    </div>
    <div class="field">
      <%= f.label "No de License" %><br>
      <%= number_field(:participant,:no_license) %>
    </div>
    <div class="field">
      <%= f.label "Date de qualification" %><br>
      <%= date_select(:participant,:dateQualification,start_year: 1970) %>
    </div>
    <% end %>
  <div class="actions btn">
    <%= f.submit %>
  </div>
<% end %>
