<span class="title-page">Matchs joués - <%= @championship.name %></span>
<div class="inner_contennt">
  <table class="datagrid">
     <thead> 
      <tr>
        <th>Date</th>
        <th>Rencontre</th>
        <th>Résultat</th>
      </tr>
    </thead>
    <tbody>
    <% @matches.each do | match |
      if match.date < Time.now %>
      <tr>
        <td>
          <%= match.date.to_formatted_s(:short) %>
        </td>
        <td>
            <%= link_to "#{match.team1_name} vs #{match.team2_name}", controller: 'stats', action: 'show_match', match_id: match.match_id %>
        </td>
        <td>
          <%= match.homeScore %> - <%= match.awayScore%>
        </td>
      </tr>
    <% end
    end %>
    </tbody>
  </table>
</div>