<span class="title-page">
  <%= image_tag "#{@team.name}.png", :alt => "Logo de l'Ã©quipe #{@team.name}" %>
	<%= @team.name %>
</span>
<div class="inner_contennt">
  <%= "Coach: #{@coach.firstname} #{@coach.name}" if not @coach.nil? %>
  <table class="datagrid">
     <thead> 
      <tr>
        <th class="name">Nom</th>
        <th>Buts</th>
        <th>But 7m</th>
        <th>Total 2'</th>
        <th>Avert.</th>
        <th>Cartons rouges<s/th>
        <th>Buts/Matchs</th>
      </tr>
    </thead>
    <tbody>
    <% @players.each do | player | %>
        <tr>
          <td>
            <%= player.participant_name %> <%= player.participant_firstname %> 
          </td>
          <td>
            <%= player.goal %> 
          </td>
          <td>
            <%= player.penalty %> 
          </td>
          <td>
            <%= player.foul %> 
          </td>
          <td>
            <%= player.yellow_card %> 
          </td>
          <td>
            <%= player.red_card %> 
          </td>
          <td>
            <% if @nbMatches != 0 %>
              <%= player.goal / Float(@nbMatches) %>
            <% else %>
              0
            <% end %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>