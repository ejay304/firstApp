<div class="inner_contennt">
  <table class="datagrid">
     <thead> 
      <tr>
        <th>Date</th>
        <th>Rencontre</th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do | match |
        if match.date >= Time.now and match.championship_id == @championship.id %>
        <tr>
          <td>
            <%= match.date.to_formatted_s(:short) %>
          </td>
          <td>
            <a href=""><%= match.team1_name %> vs <%= match.team2_name %></a>
          </td>
        </tr>
      <% end
      end %>
    </tbody>
  </table>
</div>