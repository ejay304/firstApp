<span class="title-page">Classement du championnat <%= @championship.name %></span>
<div class="inner_contennt">
  <table class="datagrid">
     <thead> 
      <tr>
        <th>no</th>
        <th>Equipe</th>
        <th>Pts</th>
        <th>J</th>
        <th>G</th>
        <th>N</th>
        <th>P</th>
        <th>bp</th>
        <th>bc</th>
        <th>+/-</th>
      </tr>
    </thead>
    <tbody>
    <%
      i = 1
      @ranking.each_with_index do | r |  %>
      <tr>
        <td>
          <%= i %>
        </td>
        <td>
          <%= link_to r.team_name, controller: "stats", action: "show_team", championship_name: @championship.name, team_name: r.team_name %>
        </td>
        <td>
          <%= r.score %>
        </td>
        <td>
          <%= r.win + r.equal + r.lose %>
        </td>
        <td>
          <%= r.win %>
        </td>
        <td>
          <%= r.equal %>
        </td>
        <td>
          <%= r.lose %>
        </td>
        <td>
          <%= r.goals_scored %>
        </td>
        <td>
          <%= r.let_in_goals %>
        </td>
        <td>
          <%= r.goals_scored - r.let_in_goals %>
        </td>
      </tr>
    <%
          i = i + 1
      end %>
    </tbody>
  </table>
</div>