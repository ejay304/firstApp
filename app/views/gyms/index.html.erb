<h1>Listing gyms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Adress</th>
    <th>Zip</th>
    <th>City</th>
    <th>Federation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gyms.each do |gym| %>
  <tr>
    <td><%= gym.name %></td>
    <td><%= gym.adress %></td>
    <td><%= gym.zip %></td>
    <td><%= gym.city %></td>
    <td><%= gym.federation_id %></td>
    <td><%= link_to 'Show', gym %></td>
    <td><%= link_to 'Edit', edit_gym_path(gym) %></td>
    <td><%= link_to 'Destroy', gym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

