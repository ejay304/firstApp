<h1>Liste des salles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Adresse</th>
      <th>NPA</th>
      <th>Ville</th>
      <th>Fédération</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <tr>
        <td><%= gym.name %></td>
        <td><%= gym.adress %></td>
        <td><%= gym.zip %></td>
        <td><%= gym.city %></td>
        <td><%= gym.federation.name %></td>
        <td><%= link_to 'Voir', gym %></td>
        <td><%= link_to 'Modifier', edit_gym_path(gym) %></td>
        <td><%= link_to 'Supprimer', gym, method: :delete, data: { confirm: 'Etes-vous sûr?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="btn btn-danger">Ajouter une salle</button>'.html_safe, new_gym_path %>
